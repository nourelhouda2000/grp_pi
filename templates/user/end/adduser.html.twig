{% extends 'user/end/baseend.html.twig' %}
{% block title %} Nouvel utilisateur {% endblock %}
{% block bd %}

<div id="wrapper">
    <!-- Content Wrapper -->
        
    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Ajouter Utilisateur</h6>
                        </div>
                        <div class="card-body">
                            <!-- Form Start -->
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                            <div class="form-group">
                                {{ form_row(form.nomuser, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.Prenomuser, {'label': 'Prénom', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.ageuser, {'label': 'Âge', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.sexe, {'label': 'Sexe', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.mdp, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.email, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.role, {'label': 'Rôle', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Confirmer </button>
                            </div>

                            <div class="text-center mt-3"> <!-- Ajoute une marge supérieure de 3 unités (par exemple) -->
                                <a href="{{ path('afficheruser') }}" class="btn btn-primary">
                                    <i class="fas fa-arrow-left"></i> Retour à la liste
                                </a>
                            </div>
                            <!-- Form End -->
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
</div>
{% endblock %}
