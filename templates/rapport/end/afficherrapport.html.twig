{% extends 'rendezvous/end/baseend.html.twig' %}
{% block title %} Sante 180° {% endblock %}
{% block bd %}      
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8"> <!-- Utilisez col-md-8 pour une largeur maximale sur les petits écrans -->
            <div class="card shadow mb-4">
                {% if response %}
                    {% if response.Rapport is defined and response.Rapport is not empty %}
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Rapport du rendez-vous</h6>
                        </div>
                        <div class="card-body">
                            <p>{{ response.Rapport }}</p> <!-- Affichage du rapport -->
                        </div>
                    {% endif %}
                {% else %}
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Aucun rapport trouvé pour ce rendez-vous</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center mt-3">
                            <a href="{{ path('addrapportt') }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus"></i> Ajouter un rapport
                            </a>
                        </div>
                    </div>
                {% endif %}
                <div class="card-footer text-center">
                    <a href="{{ path('afficher') }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-left"></i> Retour à la liste des rendez-vous
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
