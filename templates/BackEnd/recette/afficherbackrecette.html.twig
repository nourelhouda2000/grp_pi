                                                    <th>category</th>
                                                     <th>ingredient</th>
                                                    <th>nom</th>
                                                    <th>nutritions</th>
                                                    <th>Action</th>
                                                 
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for t in response %}
                                                <tr>
                                                    <td>{{ t.id }}</td>
                                                    <td>{{ t.category }}</td>
                                    
                                                    <td>{{ t.ingredient }}</td>
                                                    <td>{{ t.nom}}</td>
                                                    <td>{{ t.nutrition}}</td>
                                                    
                                                    <td>
                                                      
<a class="btn btn-primary btn-sm" href="{{ path('modifierRecette', {'id': t.id}) }}" style="background: transparent; width: 100%;">
    <i class="fas fa-edit" style="color: blue;"></i>
</a>
                                                          <a class="btn btn-primary btn-sm" href="{{ path('supprimerRecette', {'id': t.id}) }}" style="background: transparent; width: 100%;"><i class='fas fa-trash-alt' style='color:red'></i></a>




                                                    </td>
                                                </tr>
                                                
                                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                

                   

{% endblock %}