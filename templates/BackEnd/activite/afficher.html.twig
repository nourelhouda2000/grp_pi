{% extends 'BackEnd/baseend.html.twig' %}

{% block bd %}

<!-- Begin Page Content rendez vous -->
<div class="container-fluid">

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10"> <!-- Élargissez la colonne pour mieux afficher le tableau -->
               <div class="mb-3">
                    <a class="btn btn-secondary" href="{{ path('index') }}">
                        <i class="fas fa-arrow-left"></i> Retour à la page principale
                    </a>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Afficher les activités</h6>
                    </div>
                    <div class="card-body">
                        <!-- Bouton de retour à la page principale -->
                        
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>NOM</th>
                                        <th>DESCRIPTION</th>
                                        <th>CATEGORIE</th>
                                        <th>NIVEAU</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for t in response %}
                                    <tr>
                                        <td>{{ t.id }}</td>
                                        <td>{{ t.nom }}</td>
                                        <td>{{ t.description }}</td>
                                        <td>{{ t.categorie }}</td>
                                        <td>{{ t.niveau }}</td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="{{ path('rmF', {'id': t.id}) }}">
                                                <i class="fas fa-trash-alt"></i> Supprimer
                                            </a>
                                            <a class="btn btn-primary btn-sm" href="{{ path('edit', {'id': t.id}) }}">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                       <tr>
                                        <td colspan="6">
                                            <div class="row justify-content-center">
                                                <div class="col-md-6 text-center">
                                                    <div class="btn-group">
                                                        <a class="btn btn-primary btn-lg mr-2" href="{{ path('add') }}" style="padding: 15px 30px; font-size: 18px;">
                                                            <i class="fas fa-plus-circle"></i> Ajouter
                                                        </a>
                                                        <a class="btn btn-success btn-lg" href="{{ path('app_activite_tri_par_nom') }}" style="padding: 15px 30px; font-size: 18px;">
                                                            <i class="fas fa-sort"></i> Trier
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- Table End -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
