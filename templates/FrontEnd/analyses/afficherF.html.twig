{% extends 'FrontEnd/basef.html.twig' %}
{% block body %}
   <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Afficher Analyses</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
    <a href="{{ path('addF') }}" class="btn btn-Add">Ajouter Analyse</a>
        <tr>
            <th>Sante</th>
            <th>Poids</th>
            <th>Taille</th>
            <th>Poids ideale</th>
            <th>IMC</th>
            <th>Taux de graisse</th>
            
           
            <th>Actions</th> <!-- Rename the table header to "Actions" -->
        </tr>
    </thead>
    <tbody>
        {% for t in response %}
            <tr>
                <td>{{ t.Sante }}</td>
                <td>{{ t.poids }}</td>
                <td>{{ t.taille }}</td>
                <td>{{ t.poidsideal }}</td>
                <td>{{ t.IMC }}</td>
                <td>{{ t.taux }}</td>
                
                
                <td>
                    <a href="{{ path('update', {'id': t.id}) }}" class="btn btn-update">Update</a>
                     <a href="{{ path('remove', {'id': t.id}) }}" class="btn btn-delete">Remove</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<style>
   

    .btn {
        display: inline-block;
        padding: 6px 12px;
        margin: 5px;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn-update {
        background-color: #007bff;
        color: #fff;
    }
 .btn-Add {
        background-color: #007bff;
        color: #fff;
    }
    .btn-delete {
        background-color: #fa0505;
        color: #fff;
    }
</style>
{% endblock %}