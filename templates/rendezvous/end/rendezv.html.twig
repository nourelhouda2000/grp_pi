{% extends 'rendezvous/end/baseend.html.twig' %}
{% block title %} Ajouter rendez-vous {% endblock %}
{% block bd %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div id="wrapper">
    <!-- Content Wrapper -->

    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Ajouter rendez-vous</h6>
                        </div>
                        <div class="card-body">
                            <!-- Form Start -->

                            <div class="form-group">
                                {{ form_label(form.idUser, 'ID Utilisateur', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.idUser, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.idUser) }}
                            </div>
                           
                            <div class="form-group">
                                {{ form_label(form.dateR, 'Date du rendez-vous', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.dateR, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
                                {{ form_errors(form.dateR) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.heur, 'Heure du rendez-vous', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.heur, {'attr': {'class': 'form-control', 'placeholder': 'HH:MM'}}) }}
                                {{ form_errors(form.heur) }}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Confirmer le rendez-vous</button>
                            </div>

                            <div class="text-center mt-3">
                                <a href="{{ path('afficher') }}" class="btn btn-primary">
                                    <i class="fas fa-arrow-left"></i> Retour Ã  Liste
                                </a>
                            </div>
                            <!-- Form End -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
</div>
{{ form_end(form) }}
{% endblock %}
